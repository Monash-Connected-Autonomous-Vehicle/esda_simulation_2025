  <export>
    <build_type>ament_cmake</build_type>
    <gazebo_ros gazebo_model_path="${prefix}/.."/>
    <gz_sim_resource_path>${prefix}/..</gz_sim_resource_path>
    <ign_gazebo_resource_path>${prefix}/..</ign_gazebo_resource_path>
